---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<link rel="preload" href="/fonts/cooperhewitt-heavy.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-heavyitalic.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-bold.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-bolditalic.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-semibold.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-semibolditalic.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-medium.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-mediumitalic.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-book.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-bookitalic.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-light.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-lightitalic.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-thin.woff2" as="font" type="font/woff2" crossorigin />
	<link rel="preload" href="/fonts/cooperhewitt-thinitalic.woff2" as="font" type="font/woff2" crossorigin />

	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body class="bg-magenta-900 text-stone-200 min-h-screen">
<slot />
</body>
</html>

