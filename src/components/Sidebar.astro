---
export type Props = {
  open: string;
}
const { open } = Astro.props;
---
<template x-teleport="body">
  <div x-show={open} @click="openSidebar=false"
       class="bg-black/30 fixed top-0 bottom-0 left-0 right-0 z-10" x-transition.opacity.duration.400ms>
  </div>
</template>
<template x-teleport="body">
  <div x-show={open} class="fixed text-xl uppercase top-0 bg-magenta-800 h-full w-fit z-20 text-magenta-400 font-bold"
       x-transition:enter="transition-all ease-out duration-500" x-transition:enter-start="-translate-x-full"
       x-transition:leave="transition-all ease-out duration-500" x-transition:leave-end="-translate-x-full"
  >
    <slot/>
  </div>

</template>
